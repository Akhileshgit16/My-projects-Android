<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2C332C"
    android:padding="10dp" >

    <!-- CardView with elevation and corner radius -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="10dp">


        <!-- Horizontal LinearLayout to align Image and Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#799D52"
            android:paddingLeft="20dp"
            >

            <!-- ImageView for the image on the left -->
            <ImageView
                android:id="@+id/foodimageView"
                android:layout_gravity="center_vertical"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/pizzapng" />

            <!-- TextView for the text next to the image -->
            <TextView
                android:id="@+id/foodtextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Pizza"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>